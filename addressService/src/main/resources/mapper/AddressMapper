<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xmu.oomall.address.mapper.AddressMapper">


    <select id="getAllUserAddress" resultType="xmu.oomall.address.domain.AddressPo">

        select * from oomall_address where user_id=#{userId} and consignee=#{name};

    </select>

    <select id="getAllAddressById" resultType="xmu.oomall.address.domain.AddressPo">

        select * from oomall_address where user_id=#{userId} and is_deleted=0;

    </select>

    <select id="getAddressById" resultType="xmu.oomall.address.domain.AddressPo" parameterType="Integer">

        select * from oomall_address where id=#{Id} and is_deleted=0;

    </select>

    <insert id="addAddress" parameterType="xmu.oomall.address.domain.AddressPo">

        insert into oomall_address;

    </insert>

    <update id="editAddress" parameterType="xmu.oomall.address.domain.AddressPo">

        update oomall_address set gmt_modified=#{gmtModified},user_id=#{userId},city_id=#{cityId},province_id=#{provinceId},county_id=#{countyId}, adddress_detail=#{addressDetail}, mobile=#{mobile}, postal_code=#{postalCode},consignee=#{consignee}, is_default=#{beDefault} where id=#{id};

    </update>

    <update id="deleteAddress" parameterType="Integer">

        update oomall_address set is_deleted=1 where id=#{id};

    </update>

</mapper>